<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".TypeEditDialog"
    android:background="@drawable/type_edit_dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/introBtnPlus"
            android:textColor="@color/itemTextColor"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etAddType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:hint="추가할 카테고리"
            android:imeOptions="actionDone"
            android:inputType="textPersonName"
            android:textColor="@color/itemTextColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/btnAddColor"
            android:text="@string/okMessage"
            android:textColor="@color/tvAddColor" />

    </LinearLayout>
</FrameLayout>
