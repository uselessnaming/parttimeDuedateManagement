<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/insertFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/insertTitle"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvLocationInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/inputLocation"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/etLocationInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:hint="@string/inputLocation"
        android:inputType="textPersonName"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationInsert"/>

    <TextView
        android:id="@+id/tvNameInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/inputName"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/etDuedateInsert" />

    <EditText
        android:id="@+id/etNameInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxEms="20"
        android:hint="@string/inputName"
        android:inputType="textPersonName"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tvDuedateInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/inputDuedate"
        android:textSize="30sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etInputYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/inputYear"
            android:ems="5"
            android:maxLength="4"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/year"
            android:textSize="20sp"
            android:textStyle="bold|normal"/>

        <EditText
            android:id="@+id/etInputMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/inputMonth"
            android:gravity="center"
            android:ems="4"
            android:maxLength="2"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/month"
            android:textSize="20sp"
            android:textStyle="bold|normal"/>

        <EditText
            android:id="@+id/etInputDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/inputDay"
            android:gravity="center"
            android:ems="5"
            android:maxLength="2"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/day"
            android:textSize="20sp"
            android:textStyle="bold|normal"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/okMessage"
        android:layout_gravity = "center"/>

</LinearLayout>