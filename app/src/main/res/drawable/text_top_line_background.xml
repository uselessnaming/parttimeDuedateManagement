<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color = "@color/borderline"/>
        </shape>
    </item>
    <item android:top="3dp"
        android:right="1dp"
        android:left="1dp"
        android:bottom="-3dp">
        <shape android:shape="rectangle">
            <solid android:color = "@color/layoutBackground"/>
        </shape>
    </item>
    <item android:bottom="2dp"
        android:top="-2dp"
        android:right="-2dp"
        android:left="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/borderline"
                android:width="3dp"
                android:dashGap="5dp"
                android:dashWidth="2dp"/>
        </shape>
    </item>
</layer-list>