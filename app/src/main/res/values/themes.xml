<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ParttimeDuedateManagement" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">
            @style/BottomSheetStyle
        </item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="background">
            @android:color/transparent
        </item>
    </style>
    <style name= "SpinnerDivideTheme" parent = "android:style/Widget.ListView.DropDown">
        <item name="android:divider">#FF000000</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <style name="SpinnerTheme" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:dropDownListViewStyle">@style/SpinnerDivideTheme</item>
    </style>
</resources>